<div class="container">
  <div class="row mt-4">
    <h2 class="bg-light text-dark">商品詳細</h2>
  </div>

  <div class= "row mt-4">
    <div class="col-md-4">
      <%= image_tag @item.get_image(100, 100) %>
    </div>
    <div class="col-md-8">
      <table>
        <tr>
          <td style="width: 40%">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td style="width: 40%">商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td style="width: 40%">ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td style="width: 40%">
            税込価格 </br >
            (税抜価格)
          </td>
          <td>
            <%= @item.with_tax_price.to_s(:delimited) %> ( <%= @item.price.to_s(:delimited) %> ) 円
          </td>
        </tr>
        <tr>
          <td style="width: 40%">販売ステータス</td>
          <% if @item.is_active == true %>
            <td class="font-weight-bold text-success">販売中</td>
          <% else %>
            <td class="font-weight-bold text-muted">販売停止中</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-2">
    <p class="mx-auto">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </p>
  </div>
</div>