<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2>商品一覧</h2>
    </div>
    <div class="col-lg-3">
      <p class="h2 float-right">
        <%= link_to "+", new_admin_item_path %>
      </p>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>
            商品ID
          </th>
          <th>
            商品名
          </th>
          <th>
            税抜価格
          </th>
          <th>
            ジャンル
          </th>
          <th>
            ステータス
          </th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name, admin_item_path(item), class: "text-dark" %>
          </td>
          <td>
            <%= item.price.to_s(:delimited) %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <% if item.is_active == true %>
            <td class="text-success font-weight-bold">
              販売中
            </td>
          <% else %>
            <td class="text-muted font-weight-bold">
              販売停止中
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>