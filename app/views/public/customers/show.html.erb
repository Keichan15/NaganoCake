<h2>マイページ</h2>

<div class="container">
  <p>
    <strong>登録情報</strong>
    <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
  </p>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <td style="width: 20%">
          氏名
        </td>
        <td>
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%">
          カナ
        </td>
        <td>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%">
          郵便番号
        </td>
        <td>
          <%= @customer.postal_code %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%">
          住所
        </td>
        <td>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <td style="width: 20%">
          電話番号
        </td>
        <td>
          <%= @customer.telephone_number %>
        </td>
      </tr>
        <td style="width: 20%">
          メールアドレス
        </td>
        <td>
          <%= @customer.email %>
        </td>
      </tr>
    </tbody>
  </table>

  <p>
    <strong>配送先</strong>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </p>

  <p>
    <strong>注文履歴</strong>
    <button class="btn btn-primary">一覧を見る</button>
  </p>
</div>
