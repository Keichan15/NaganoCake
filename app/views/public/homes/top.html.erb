<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="table table-borderless border">
        <thead class="border">
          <tr>
            <th>
              ジャンル検索
            </th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-dark" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-10">
      <h2>ようこそ、ながのCAKEへ！</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <h2>
        <strong>新着商品</strong>
      </h2>
      <table class="table table-borderless">
        <tr>
        <% @items.each do |item| %>
          <td>
            <%= link_to item_path(item) do %>
              <%= image_tag item.get_image(100, 100) %> <br>
            <% end %>
            <%= item.name %> <br>
            ￥<%= item.with_tax_price %>
          </td>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>


