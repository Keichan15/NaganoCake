<div class="container">
  <h2>配送先登録 / 一覧</h2>

  <div class="row">
    <%= form_with model: @address, url: addresses_path do |f| %>
      <table class="table">
        <tr>
          <td>
            郵便番号(ハイフンなし)
          </td>
          <td>
            <%= f.text_field :postal_code %>
          </td>
          <td colspan='3'></td>
        </tr>
        <tr>
          <td>
            住所
          </td>
          <td>
            <%= f.text_field :address %>
          </td>
          <td colspan='3'></td>
        </tr>
        <tr>
          <td>
            宛名
          </td>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>
              郵便番号
            </th>
            <th>
              住所
            </th>
            <th>
              宛名
            </th>
            <th colspan='3'></th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
