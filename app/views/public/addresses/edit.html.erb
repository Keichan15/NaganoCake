<div class="container">
  <h2>配送先編集</h2>

  <div class="row">
    <%= form_with model: @address, url: address_path(@address) do |f| %>
    <table class="table">
      <tr>
        <td>
          郵便番号(ハイフンなし)
        </td>
        <td>
          <%= f.text_field :postal_code %>
        </td>
        <td colspan='3'></td>
      </tr>
      <tr>
        <td>
          住所
        </td>
        <td>
          <%= f.text_field :address %>
        </td>
        <td colspan='3'></td>
      </tr>
      <tr>
        <td>
          宛名
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
        <td>
          <%= f.submit '変更内容を保存', class: "btn btn-success" %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>
